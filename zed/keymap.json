[
  {
    "context": "Editor",
    "bindings": {
      "alt-k": "editor::MoveLineUp",
      "alt-j": "editor::MoveLineDown"
    }
  },
  {
    "context": "",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-l": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "Editor && VimControl && !VimWaiting && !menu",
    "bindings": {
      "space c a": "editor::ToggleCodeActions",
      "space c r": "editor::Rename",
      "space c k": "editor::Hover",
      "space c s": "outline::Toggle",
      "space c S": "project_symbols::Toggle",
      "space c D": "diagnostics::Deploy",
      "space c c": "editor::ToggleComments",
      "space c f": "editor::Format",
      "space f b": "tab_switcher::Toggle",
      "space f f": "file_finder::Toggle",
      "space f e": "workspace::ToggleLeftDock",
      "space f t": "workspace::ToggleBottomDock",
      "space b f": "tab_switcher::Toggle",
      "space b d": ["pane::CloseActiveItem", { "close_pinned": false }],
      "space b D": "workspace::CloseInactiveTabsAndPanes",
      "space w s": "pane::SplitDown",
      "space w v": "pane::SplitRight",
      "space w h": "workspace::ActivatePaneLeft",
      "space w j": "workspace::ActivatePaneDown",
      "space w k": "workspace::ActivatePaneUp",
      "space w l": "workspace::ActivatePaneRight",
      "space w d": "pane::CloseAllItems",
      "space w z": "workspace::ToggleZoom"
      // "g n": "editor::SelectNext"
      // "g r": "editor::FindAllReferences"
      // "space v": "editor::GoToDefinitionSplit",
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::SwitchToNormalMode"
    }
  }
]
